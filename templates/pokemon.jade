    title=name + " | Pokedex"
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
    link(rel="stylesheet", href="../styles/main.css")
  body
    div(class="container", style="margin-top: 50px;")
